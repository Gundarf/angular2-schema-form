{
	"compilerOptions": {
		"declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "dist/",
    
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
	},
	"exclude": [
    "dist",
    "node_modules",
    "index.ts",
		"demo"
  ],
	"include": [
		"src/**/*"
	],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": { "rewriteTsconfig": false }
}
