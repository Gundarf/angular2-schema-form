{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "outDir":"dist/",
        "declaration": true,
        "noEmitHelpers": false,
        "strictNullChecks": false,
        "typeRoots": [
           "../../node_modules/@types",
           "../../node_modules"
          ],
          "types": [
            "core-js", "node"
          ]
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "forkChecker": true
    },
    "include": [
        "src/**/*",
        "demo/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "typeRoots": [
       "../../node_modules/@types",
       "../../node_modules"
      ],
      "types": [
  "core-js"
],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}
